Package: netdata-plugin-network-viewer
Architecture: any
Depends: ${shlibs:Depends},
         netdata (= ${source:Version})
Pre-Depends: libcap2-bin, adduser
Recommends: netdata-plugin-ebpf (= ${source:Version}) [amd64]
