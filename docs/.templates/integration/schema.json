{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Netdata Integrations file",
    "properties": {
        "categories_list": {
            "type": "object",
            "description": "A list defining all the available categories for the integrations",
            "properties": {
                "list": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Name of the category"
                            },
                            "priority_id": {
                                "type": "string",
                                "description": "Priority of the category that will also be used as this category's ID"
                            },
                            "parent": {
                                "type": [
                                    "null",
                                    "string"
                                ],
                                "description": "The category's parent ID (priority_id), make it null if no parent"
                            }
                        }
                    }
                }
            }
        },
        "integrations": {
            "type": "array",
            "description": "A list of integration elements, combination of metadata.yaml and other sources",
            "items": {
                "type": "object",
                "properties": {
                    "category": {
                        "type": "object",
                        "properties": {
                            "category_name": {
                                "type": "string",
                                "description": "Where this integration belongs, in category/sub_category/.. format."
                            },
                            "integration_priority": {
                                "type": "string",
                                "description": "the priority of the integration in its final level sub_category"
                            }
                        }
                    },
                    "icon": {
                        "type": "string",
                        "description": "path to the icon for this integration"
                    },
                    "meta": {
                        "$ref": "../../../collectors/meta_template/schema.json",
                        "description": "the metadata.yaml structure"
                    },
                    "related_blog_posts": {
                        "type": "array",
                        "description": "A list with links to related blog posts",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "link": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}