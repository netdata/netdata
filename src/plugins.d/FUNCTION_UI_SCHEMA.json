{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Netdata Functions UI Response",
  "type": "object",
  "required": ["status"],
  "properties": {
    "status": {
      "type": "integer"
    }
  },
  "oneOf": [
    { "$ref": "#/definitions/info_response" },
    { "$ref": "#/definitions/data_response" },
    { "$ref": "#/definitions/topology_response" },
    { "$ref": "#/definitions/flows_response" },
    { "$ref": "#/definitions/error_response" },
    { "$ref": "#/definitions/not_modified_response" }
  ],
  "definitions": {
    "field_type": {
      "type": "string",
      "enum": [
        "none",
        "integer",
        "float",
        "boolean",
        "string",
        "detail-string",
        "bar-with-integer",
        "duration",
        "timestamp",
        "array",
        "feedTemplate"
      ]
    },
    "field_visual": {
      "type": "string",
      "enum": [
        "value",
        "bar",
        "pill",
        "richValue",
        "rowOptions",
        "feedTemplate"
      ]
    },
    "field_transform": {
      "type": "string",
      "enum": [
        "none",
        "number",
        "duration",
        "datetime",
        "datetime_usec",
        "xml",
        "text"
      ]
    },
    "field_sort": {
      "type": "string",
      "enum": ["ascending", "descending"]
    },
    "field_summary": {
      "type": "string",
      "enum": ["count", "uniqueCount", "sum", "min", "max", "mean", "median"]
    },
    "field_filter": {
      "type": "string",
      "enum": ["none", "range", "multiselect", "facet"]
    },
    "value_options": {
      "type": "object",
      "properties": {
        "units": { "type": ["string", "null"] },
        "transform": { "$ref": "#/definitions/field_transform" },
        "decimal_points": { "type": "integer", "minimum": 0 },
        "default_value": { "type": ["string", "number", "boolean", "null"] }
      },
      "additionalProperties": true
    },
    "column": {
      "type": "object",
      "required": ["index", "name", "type"],
      "properties": {
        "index": { "type": "integer", "minimum": 0 },
        "unique_key": { "type": "boolean" },
        "name": { "type": "string" },
        "type": { "$ref": "#/definitions/field_type" },
        "units": { "type": ["string", "null"] },
        "visualization": { "$ref": "#/definitions/field_visual" },
        "value_options": { "$ref": "#/definitions/value_options" },
        "max": { "type": "number" },
        "pointer_to": { "type": ["string", "null"] },
        "sort": { "$ref": "#/definitions/field_sort" },
        "sortable": { "type": "boolean" },
        "sticky": { "type": "boolean" },
        "summary": { "$ref": "#/definitions/field_summary" },
        "filter": { "$ref": "#/definitions/field_filter" },
        "full_width": { "type": "boolean" },
        "wrap": { "type": "boolean" },
        "default_expanded_filter": { "type": "boolean" },
        "dummy": { "type": "boolean" }
      },
      "additionalProperties": true
    },
    "columns": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/column" }
    },
    "required_param_option": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "defaultSelected": { "type": "boolean" },
        "disabled": { "type": "boolean" },
        "sort": { "$ref": "#/definitions/field_sort" }
      },
      "additionalProperties": true
    },
    "required_param": {
      "type": "object",
      "required": ["id", "name", "type", "options"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "enum": ["select", "multiselect"] },
        "options": {
          "type": "array",
          "items": { "$ref": "#/definitions/required_param_option" }
        },
        "help": { "type": "string" },
        "unique_view": { "type": "boolean" }
      },
      "additionalProperties": true
    },
    "accepted_params": {
      "type": "array",
      "items": { "type": "string" }
    },
    "required_params": {
      "type": "array",
      "items": { "$ref": "#/definitions/required_param" }
    },
    "chart_config": {
      "type": "object",
      "required": ["name", "type", "columns"],
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string" },
        "columns": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    },
    "group_by_config": {
      "type": "object",
      "required": ["name", "columns"],
      "properties": {
        "name": { "type": "string" },
        "columns": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    },
    "info_response": {
      "type": "object",
      "required": ["status", "type", "has_history", "accepted_params", "required_params", "v"],
      "properties": {
        "status": { "type": "integer" },
        "type": { "type": "string" },
        "has_history": { "type": "boolean" },
        "accepted_params": { "$ref": "#/definitions/accepted_params" },
        "required_params": { "$ref": "#/definitions/required_params" },
        "v": { "type": "integer" },
        "help": { "type": "string" },
        "update_every": { "type": "integer" },
        "expires": { "type": "integer" }
      },
      "allOf": [
        { "not": { "required": ["columns"] } },
        { "not": { "required": ["data"] } }
      ],
      "additionalProperties": true
    },
    "data_response": {
      "type": "object",
      "required": ["status", "type", "columns", "data"],
      "properties": {
        "status": { "type": "integer" },
        "type": { "type": "string", "enum": ["table", "log"] },
        "columns": { "$ref": "#/definitions/columns" },
        "data": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {}
          }
        },
        "has_history": { "type": "boolean" },
        "accepted_params": { "$ref": "#/definitions/accepted_params" },
        "required_params": { "$ref": "#/definitions/required_params" },
        "help": { "type": "string" },
        "update_every": { "type": "integer" },
        "expires": { "type": "integer" },
        "default_sort_column": { "type": "string" },
        "group_by": {
          "type": "object",
          "additionalProperties": { "$ref": "#/definitions/group_by_config" }
        },
        "charts": {
          "type": "object",
          "additionalProperties": { "$ref": "#/definitions/chart_config" }
        },
        "default_charts": {
          "type": "array",
          "items": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "facets": { "type": ["array", "object"] },
        "histogram": { "type": "object" },
        "items": { "type": "object" },
        "pagination": { "type": "object" }
      },
      "additionalProperties": true
    },
    "topology_match": {
      "type": "object",
      "properties": {
        "chassis_ids": { "type": "array", "items": { "type": "string" } },
        "mac_addresses": { "type": "array", "items": { "type": "string" } },
        "ip_addresses": { "type": "array", "items": { "type": "string" } },
        "hostnames": { "type": "array", "items": { "type": "string" } },
        "dns_names": { "type": "array", "items": { "type": "string" } },
        "sys_object_id": { "type": "string" },
        "sys_name": { "type": "string" },
        "netdata_node_id": { "type": "string" },
        "netdata_machine_guid": { "type": "string" },
        "cloud_instance_id": { "type": "string" },
        "cloud_account_id": { "type": "string" },
        "container_ids": { "type": "array", "items": { "type": "string" } },
        "pod_names": { "type": "array", "items": { "type": "string" } },
        "namespace_ids": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    },
    "topology_actor": {
      "type": "object",
      "required": ["actor_type", "layer", "source", "match"],
      "properties": {
        "actor_type": { "type": "string" },
        "layer": { "type": "string" },
        "source": { "type": "string" },
        "match": { "$ref": "#/definitions/topology_match" },
        "parent_match": { "$ref": "#/definitions/topology_match" },
        "attributes": { "type": "object" },
        "derived": { "type": "object" },
        "labels": { "type": "object" }
      },
      "additionalProperties": true
    },
    "topology_link_endpoint": {
      "type": "object",
      "properties": {
        "match": { "$ref": "#/definitions/topology_match" },
        "attributes": { "type": "object" }
      },
      "additionalProperties": true
    },
    "topology_link": {
      "type": "object",
      "required": ["layer", "protocol", "src", "dst"],
      "properties": {
        "layer": { "type": "string" },
        "protocol": { "type": "string" },
        "direction": { "type": "string" },
        "state": { "type": "string" },
        "src": { "$ref": "#/definitions/topology_link_endpoint" },
        "dst": { "$ref": "#/definitions/topology_link_endpoint" },
        "discovered_at": { "type": "string", "format": "date-time" },
        "last_seen": { "type": "string", "format": "date-time" },
        "metrics": { "type": "object" }
      },
      "additionalProperties": true
    },
    "topology_flow_exporter": {
      "type": "object",
      "properties": {
        "ip": { "type": "string" },
        "name": { "type": "string" },
        "sampling_rate": { "type": "integer" },
        "flow_version": { "type": "string" }
      },
      "additionalProperties": true
    },
    "topology_flow": {
      "type": "object",
      "properties": {
        "timestamp": { "type": "string", "format": "date-time" },
        "duration_sec": { "type": "integer" },
        "exporter": { "$ref": "#/definitions/topology_flow_exporter" },
        "src": { "$ref": "#/definitions/topology_link_endpoint" },
        "dst": { "$ref": "#/definitions/topology_link_endpoint" },
        "key": { "type": "object" },
        "metrics": { "type": "object" }
      },
      "additionalProperties": true
    },
    "topology_ip_policy": {
      "type": "object",
      "properties": {
        "public_allowlist": { "type": "array", "items": { "type": "string" } },
        "live_top_n": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "limit": { "type": "integer" },
            "sort_by": { "type": "string" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "topology_response": {
      "type": "object",
      "required": ["status", "type", "data"],
      "properties": {
        "status": { "type": "integer" },
        "type": { "const": "topology" },
        "data": {
          "type": "object",
          "required": ["schema_version", "agent_id", "collected_at", "actors", "links"],
          "properties": {
            "schema_version": { "type": "string" },
            "source": { "type": "string" },
            "layer": { "type": "string" },
            "agent_id": { "type": "string" },
            "collected_at": { "type": "string", "format": "date-time" },
            "view": { "type": "string" },
            "ip_policy": { "$ref": "#/definitions/topology_ip_policy" },
            "actors": {
              "type": "array",
              "items": { "$ref": "#/definitions/topology_actor" }
            },
            "links": {
              "type": "array",
              "items": { "$ref": "#/definitions/topology_link" }
            },
            "flows": {
              "type": "array",
              "items": { "$ref": "#/definitions/topology_flow" }
            },
            "stats": { "type": "object" },
            "metrics": { "type": "object" }
          },
          "additionalProperties": true
        },
        "has_history": { "type": "boolean" },
        "accepted_params": { "$ref": "#/definitions/accepted_params" },
        "required_params": { "$ref": "#/definitions/required_params" },
        "help": { "type": "string" },
        "update_every": { "type": "integer" },
        "expires": { "type": "integer" }
      },
      "additionalProperties": true
    },
    "flows_response": {
      "type": "object",
      "required": ["status", "type", "data"],
      "properties": {
        "status": { "type": "integer" },
        "type": { "const": "flows" },
        "data": {
          "type": "object",
          "required": ["schema_version", "agent_id", "collected_at"],
          "properties": {
            "schema_version": { "type": "string" },
            "source": { "type": "string" },
            "layer": { "type": "string" },
            "agent_id": { "type": "string" },
            "collected_at": { "type": "string", "format": "date-time" },
            "view": { "type": "string" },
            "ip_policy": { "$ref": "#/definitions/topology_ip_policy" },
            "actors": {
              "type": "array",
              "items": { "$ref": "#/definitions/topology_actor" }
            },
            "links": {
              "type": "array",
              "items": { "$ref": "#/definitions/topology_link" }
            },
            "flows": {
              "type": "array",
              "items": { "$ref": "#/definitions/topology_flow" }
            },
            "stats": { "type": "object" },
            "metrics": { "type": "object" },
            "warnings": { "type": ["array", "object"] },
            "facets": { "type": ["array", "object"] },
            "histogram": { "type": "object" },
            "visualizations": { "type": "object" },
            "pagination": { "type": "object" }
          },
          "additionalProperties": true
        },
        "has_history": { "type": "boolean" },
        "accepted_params": { "$ref": "#/definitions/accepted_params" },
        "required_params": { "$ref": "#/definitions/required_params" },
        "help": { "type": "string" },
        "update_every": { "type": "integer" },
        "expires": { "type": "integer" }
      },
      "additionalProperties": true
    },
    "error_response": {
      "type": "object",
      "required": ["status", "errorMessage"],
      "properties": {
        "status": { "type": "integer", "minimum": 400 },
        "errorMessage": { "type": "string" },
        "error": { "type": "string" },
        "message": { "type": "string" },
        "help": { "type": "string" }
      },
      "additionalProperties": true
    },
    "not_modified_response": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": { "const": 304 }
      },
      "additionalProperties": false
    }
  }
}
