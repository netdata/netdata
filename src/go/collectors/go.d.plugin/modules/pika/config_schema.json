{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "go.d/pika job configuration schema.",
  "properties": {
    "name": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "timeout": {
      "type": [
        "string",
        "integer"
      ]
    },
    "tls_ca": {
      "type": "string"
    },
    "tls_cert": {
      "type": "string"
    },
    "tls_key": {
      "type": "string"
    },
    "tls_skip_verify": {
      "type": "boolean"
    }
  },
  "required": [
    "name",
    "address"
  ]
}
