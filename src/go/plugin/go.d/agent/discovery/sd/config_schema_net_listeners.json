{
  "jsonSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Net Listeners Service Discovery",
    "description": "Discovers services by scanning local listening network ports.",
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "description": "Pipeline name (must be unique).",
        "type": "string",
        "minLength": 1
      },
      "interval": {
        "title": "Scan interval",
        "description": "How often to scan for listeners.",
        "type": "string",
        "pattern": "^[0-9]+(s|m|h)$",
        "default": "2m"
      },
      "timeout": {
        "title": "Timeout",
        "description": "Timeout for local listener discovery.",
        "type": "string",
        "pattern": "^[0-9]+(s|m)$",
        "default": "5s"
      },
      "tags": {
        "title": "Tags",
        "description": "Tags to apply to discovered targets (space-separated).",
        "type": "string"
      },
      "services": {
        "title": "Service rules",
        "description": "Service matching rules.",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "title": "Rule ID",
              "description": "Rule identifier (for logging/diagnostics).",
              "type": "string"
            },
            "match": {
              "title": "Match expression",
              "description": "Expression to match targets (e.g., '{{.Port}} == 80').",
              "type": "string"
            },
            "config_template": {
              "title": "Config template",
              "description": "YAML template for collector config generation.",
              "type": "string"
            }
          },
          "required": [
            "id",
            "match"
          ]
        }
      }
    },
    "required": [
      "name"
    ]
  },
  "uiSchema": {
    "uiOptions": {
      "fullPage": true
    },
    "interval": {
      "ui:placeholder": "2m",
      "ui:help": "Examples: 30s, 2m, 5m"
    },
    "timeout": {
      "ui:placeholder": "5s",
      "ui:help": "Examples: 5s, 10s"
    },
    "services": {
      "items": {
        "config_template": {
          "ui:widget": "textarea"
        }
      }
    }
  }
}
