        "minimum": 1,
        "default": 10
      },
      "sensors_path": {
        "title": "Sensors path",
        "description": "Path with the sensor directories that contain the w1_slave files.",
        "type": "string",
        "default": "/sys/bus/w1/devices"
      }
    },
    "required": [],
    "additionalProperties": false,
    "patternProperties": {
      "^name$": {}
    }
  },
  "uiSchema": {
    "uiOptions": {
      "fullPage": true
    }
  }
}
