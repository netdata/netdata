{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "go.d/ntpd job configuration schema.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "timeout": {
      "type": [
        "string",
        "integer"
      ]
    },
    "collect_peers": {
      "type": "boolean"
    }
  },
  "required": [
    "name",
    "address"
  ]
}
