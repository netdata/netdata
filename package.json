{
  "name": "ai-agent-claude",
  "version": "1.0.0",
  "description": "Universal LLM Tool Calling Interface with MCP support (Claude)",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ai-agent": "dist/cli.js"
  },
  "scripts": {
    "prebuild": "npm run update-version --silent",
    "build": "tsc",
    "predev": "npm run update-version --silent",
    "dev": "tsc --watch",
    "prelint": "npm run update-version --silent",
    "start": "node dist/cli.js",
    "lint": "eslint . --max-warnings 0",
    "test:phase1": "npm run build --silent && node dist/tests/phase1-harness.js",
    "update-version": "node scripts/update-version.mjs"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "2.0.34",
    "@ai-sdk/google": "2.0.23",
    "@ai-sdk/openai": "2.0.53",
    "@ai-sdk/provider-utils": "^3.0.12",
    "@modelcontextprotocol/sdk": "1.20.1",
    "@openrouter/ai-sdk-provider": "1.2.0",
    "@slack/bolt": "^4.5.0",
    "ai": "5.0.76",
    "ajv": "^8.17.1",
    "commander": "14.0.0",
    "express": "^5.1.0",
    "js-yaml": "^4.1.0",
    "ollama-ai-provider-v2": "1.5.0",
    "ws": "8.18.3",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.9.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^61.1.5",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^61.0.2",
    "knip": "^5.66.2",
    "typescript": "^5.9.3"
  }
}
