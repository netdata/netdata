{
  "name": "ai-agent-claude",
  "version": "1.0.0",
  "description": "Universal LLM Tool Calling Interface with MCP support (Claude)",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ai-agent": "dist/cli.js"
  },
  "scripts": {
    "prebuild": "npm run update-version --silent",
    "build": "tsc",
    "predev": "npm run update-version --silent",
    "dev": "tsc --watch",
    "prelint": "npm run update-version --silent",
    "start": "node dist/cli.js",
    "lint": "eslint . --max-warnings 0",
    "test": "npm run build --silent && vitest run",
    "test:watch": "npm run build --silent && vitest watch",
    "test:phase1": "npm run build --silent && vitest run src/tests/unit/",
    "test:phase2": "npm run build --silent && node dist/tests/phase2-harness.js",
    "test:phase2:parallel": "npm run build --silent && PHASE2_MODE=parallel node dist/tests/phase2-harness.js",
    "test:phase2:sequential": "npm run build --silent && PHASE2_MODE=sequential node dist/tests/phase2-harness.js",
    "test:phase3": "npm run build --silent && node dist/tests/phase3-runner.js",
    "test:phase3:tier1": "npm run build --silent && node dist/tests/phase3-runner.js --tier=1",
    "test:phase3:tier2": "npm run build --silent && node dist/tests/phase3-runner.js --tier=1,2",
    "test:all": "npm run test:phase1 && npm run test:phase2 && npm run test:phase3:tier1",
    "test:phase3:vitest": "npm run build --silent && vitest run --config vitest.phase3.config.ts",
    "update-version": "node scripts/update-version.mjs"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.57",
    "@ai-sdk/google": "^2.0.52",
    "@ai-sdk/openai": "^2.0.89",
    "@ai-sdk/openai-compatible": "^1.0.30",
    "@ai-sdk/provider-utils": "^3.0.20",
    "@anthropic-ai/tokenizer": "^0.0.4",
    "@dqbd/tiktoken": "^1.0.22",
    "@lenml/tokenizer-gemini": "^3.7.2",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@openrouter/ai-sdk-provider": "^1.5.4",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/api-logs": "^0.209.0",
    "@opentelemetry/exporter-logs-otlp-grpc": "^0.209.0",
    "@opentelemetry/exporter-metrics-otlp-grpc": "^0.209.0",
    "@opentelemetry/exporter-prometheus": "^0.209.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.209.0",
    "@opentelemetry/resources": "^2.3.0",
    "@opentelemetry/sdk-logs": "^0.209.0",
    "@opentelemetry/sdk-metrics": "^2.3.0",
    "@opentelemetry/sdk-trace-node": "^2.3.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@slack/bolt": "^4.6.0",
    "ai": "^5.0.121",
    "ajv": "^8.17.1",
    "async-mutex": "^0.5.0",
    "commander": "^14.0.2",
    "express": "^5.2.1",
    "ignore": "^7.0.5",
    "js-yaml": "^4.1.1",
    "json-schema-library": "^10.5.2",
    "jsonrepair": "^3.13.1",
    "ollama-ai-provider-v2": "^1.5.5",
    "redis": "^5.10.0",
    "undici": "^7.18.2",
    "ws": "^8.19.0",
    "zod": "^4.3.5"
  },
  "optionalDependencies": {
    "better-sqlite3": "^12.6.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "baseline-browser-mapping": "^2.9.14",
    "eslint": "^9.39.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^62.0.0",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-perfectionist": "^5.3.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "knip": "^5.81.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "overrides": {
    "hono": "^4.11.4"
  }
}
